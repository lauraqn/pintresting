<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h1>Listing Pins</h1>
    </div>
  </div>

<table>
  <thead>
    <tr>
      <th><h3>Image</h3></th>
      <th><h3>Description</h3></th>
      <th><h3>User</h3></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:medium) %></td>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %><td>
        <td><%= link_to 'View', pin, class: "btn btn-default"%></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default" %></td>
          <td><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path, class: "btn btn-warning"%>
<% end %>
</div>